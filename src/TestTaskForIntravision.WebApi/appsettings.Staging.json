{
  "ConnectionStrings": {
    "VendingMachineDbPostgreSql": "Host=postgres;Port=5432;Database=vending_machine_test;Username=postgres;Password=sa"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq", "Serilog.Enrichers.ClientInfo" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://vending-machine-api-seq"
        }
      }
    ],
    "Enrich": [
      "WithClientIp",
      "WithThreadId",
      "FromLogContext",
      "WithMachineName",
      {
        "Name": "WithRequestHeader",
        "Args": { "headerName": "User-Agent" }
      }
    ]
  },
  "AllowedHosts": "*"
}
